<UserControl x:Class="Shazzam.Views.FileLoaderPlugin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300">
  <Grid>
    <TabControl>
      <TabItem Header='Shaders'>
        <DockPanel LastChildFill='True'>

          <TextBlock DockPanel.Dock='Top'
                     Margin='3,10,0,0'>
            <Hyperlink Foreground='Gold'
                       Click='Hyperlink_Click'>Change location</Hyperlink></TextBlock>

          <ListBox x:Name='fileListBox'
                   Margin='10,8'
                   SelectionChanged='fileListBox_SelectionChanged'
                   Height='250'></ListBox>
        </DockPanel>
      </TabItem>
      <TabItem Header='Sample Shaders'>

        <DockPanel LastChildFill='True'>
          <TextBlock DockPanel.Dock='Top'
                     Margin='3,10,0,0'>
          Pre-installed samples</TextBlock>
          <ListBox x:Name='sampleListBox'
                   Margin='10,8'
                   SelectionChanged='sampleListBox_SelectionChanged'
                   Height='250'></ListBox>

        </DockPanel>
      </TabItem>
    </TabControl>
  </Grid>
</UserControl>
