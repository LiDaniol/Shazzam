<UserControl x:Class="Shazzam.Views.CodeTabView"
						 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						 xmlns:converters='clr-namespace:Shazzam.Converters'
						 xmlns:commands='clr-namespace:Shazzam.Commands'>
	<UserControl.Resources>
		<converters:StringToVisibilityConverter x:Key='visConverter' />
		<converters:VisibiltyToVisibilityConverter x:Key='visvisConverter' />
	</UserControl.Resources>
	<TabControl x:Name='codeTabControl'>
		<TabItem x:Name='codeTab'>
			<Border BorderBrush='{DynamicResource NeutralDarkBrush}'
							BorderThickness='9'>
				<Border  BorderBrush='White'
								 BorderThickness='.5'>
					<DockPanel MinWidth='330'
										 MinHeight='330'
										 LastChildFill='True'
										 Margin='.5'>
						<Popup x:Name="messagePopup"
									 Grid.Row="0"
									 PopupAnimation="Fade"
									 AllowsTransparency='True'
									 PlacementTarget="{Binding ElementName=formsHost}"
									 Placement="Center">
							<Border BorderBrush='#44000000'
											BorderThickness='3'>
								<Grid Width='300'
											Height='80'
											Background="#4422FF22">
									<Grid.RowDefinitions>
										<RowDefinition Height="80" />
									</Grid.RowDefinitions>
									<TextBlock Text="Stage 1 - DirectX FXC compile completed. "
														 HorizontalAlignment='Center'
														 VerticalAlignment='Center'
														 FontWeight="Bold"
														 Margin="5" />
								</Grid>
							</Border>
						</Popup>
						<TextBlock x:Name='outputTextBox'
											 DockPanel.Dock='Bottom'
											 Margin='0,5,0,5'
											 Padding='8,5'
											 Background='{StaticResource ErrorBrush}'
											 Foreground='White'
											 Visibility='{Binding Path=Text, Converter={StaticResource visConverter}, RelativeSource={RelativeSource Self}}'
											 Text='{Binding Path=ErrorText}' />
						<DockPanel LastChildFill='True'>
							<WindowsFormsHost x:Name='formsHost'
																Margin='2,2,2,10' />
						</DockPanel>
					</DockPanel>
				</Border>
			</Border>
		</TabItem>
		<TabItem x:Name='csharpTab'
						 Header='Generated Shader - C#'
						 Visibility='{Binding ElementName=outputTextBox,Path=Visibility, Converter={StaticResource visvisConverter}}'>
			<Border BorderBrush='{DynamicResource NeutralDarkBrush}'
							BorderThickness='9'>
				<Border  BorderBrush='White'
								 BorderThickness='.5'>
					<DockPanel MinWidth='330'
										 MinHeight='330'
										 LastChildFill='True'
										 Margin='.5'>
						<WindowsFormsHost x:Name='formsHostCs'
															Margin='2,2,2,10' />
					</DockPanel>
				</Border>
			</Border>
		</TabItem>
		<TabItem x:Name='vbTab'
						 Header='Generated Shader - Visual Basic'
						 Visibility='{Binding ElementName=outputTextBox,Path=Visibility, Converter={StaticResource visvisConverter}}'>
			<Border BorderBrush='{DynamicResource NeutralDarkBrush}'
							BorderThickness='9'>
				<Border  BorderBrush='White'
								 BorderThickness='.5'>
					<DockPanel MinWidth='330'
										 MinHeight='330'
										 LastChildFill='True'
										 Margin='.5'>
						<WindowsFormsHost x:Name='formsHostVb'
															Margin='2,2,2,10' />
					</DockPanel>
				</Border>
			</Border>
		</TabItem>
		<TabItem x:Name='InputControlsTab'
						 Header='Change Shader Settings'
						 Visibility='{Binding ElementName=outputTextBox,Path=Visibility, Converter={StaticResource visvisConverter}}'>
			<Border BorderBrush='{DynamicResource NeutralDarkBrush}'
							BorderThickness='9'>
				<Border  BorderBrush='White'
								 BorderThickness='.5'>
					<DockPanel MinWidth='330'
										 MinHeight='330'
										 LastChildFill='True'
										 Background='{StaticResource NeutralDarkBrush}'
										 Margin='.5'>
						<Expander IsExpanded='True'
											ExpandDirection='Left'
											DockPanel.Dock='Right'>
							<StackPanel MaxWidth='250'
													MinWidth='100'
													Margin='1,2,2,10'
													Background='{StaticResource NeutralDarkBrush}'>
								<Image Source='info.png'
											 Width='24'
											 Height='24'
											 Margin='0,10,0,0' />
								<TextBlock TextWrapping="Wrap"
													 Foreground="#C0C0C0"
													 Margin='10'>
                <Run  FontWeight='800'>Auto generated control information</Run>
                <LineBreak />
                <Run  Foreground='Gold'> HLSL float:</Run> becomes Double value in WPF   <LineBreak />

                <Run  Foreground='Gold'>Input:</Run> via the slider.
                <LineBreak />
                <LineBreak />

               <Run  Foreground='Gold'>HLSL float2:</Run> becomes a Point value in WPF
               <LineBreak />

                <Run  Foreground='Gold'>Input:</Run> via textbox.   <LineBreak />
                <Run FontStyle='Italic'> X and Y value typed as doubles.  (x.x, y.y).  Usually a value between 0 and 1</Run>
                <LineBreak />
                <LineBreak />
                <Run  Foreground='Gold'>HLSL float4:</Run> becomes a Color value in WPF
                <LineBreak />

                <Run  Foreground='Gold'>Input:</Run> via textbox.
                <LineBreak />
                <Run FontStyle='Italic'> Use known color values like Red, Orange, SteelBlue or hex value like #44FFCCFF.</Run></TextBlock>
							</StackPanel>
						</Expander>
						<ScrollViewer HorizontalScrollBarVisibility='Disabled'
													VerticalScrollBarVisibility='Visible'>
							<StackPanel x:Name='inputControlPanel'
												 VerticalAlignment='Top' HorizontalAlignment='Left'
												 Margin='2,2,1,10'
											
												 
												 Background='{StaticResource NeutralDarkBrush}' />
						</ScrollViewer>
					</DockPanel>
				</Border>
			</Border>
		</TabItem>
	</TabControl>
</UserControl>
